<div class="row">
  <div class="col-sm-12" data-hook="billing_fieldset_wrapper">
    <div class="panel panel-default" id="billing" data-hook>
        <div class="panel-heading">
          <h3 class="panel-title"><%= Spree.t(:type_selection) %></h3>
        </div>
        <div class="panel-body">
          <div class="well text-center form-buttons" data-hook="buttons">
            <%= form.submit 'Купить как физическое лицо', name: :individual, class: 'btn btn-lg btn-info' %>
            <%= form.submit 'Купить как юридическое лицо', name: :entity, class: 'btn btn-lg btn-success' %>
          </div>
        </div>
    </div>
  </div>
</div>


