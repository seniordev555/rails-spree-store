<div class="container-menu-desktop trans-03 fix-menu-desktop">
  <div class="wrap-menu-desktop">
    <nav class="limiter-menu-desktop p-l-45">

      <!-- Logo desktop -->
      <figure id="logo" class="logo" data-hook>
        <%= logo %>
      </figure>

      <!-- Menu desktop -->
      <div class="menu-desktop">
        <ul class="main-menu">
          <li class="label1 active-menu" data-label1="hot">
            <%= link_to 'Shop', spree.root_path %>
          </li>

          <li>
            <a href="">About</a>
          </li>

          <li>
            <a href="">Contact</a>
          </li>
        </ul>
      </div>

      <!-- Icon header -->
      <div class="wrap-icon-header flex-w flex-r-m h-full">
        <div class="flex-c-m h-full p-r-24">
          <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11">
            <i class="zmdi zmdi-search js-show-modal-search"></i>
          </div>
        </div>

        <div class="flex-c-m h-full p-l-18 p-r-25 bor5">
          <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti" data-notify="<%=simple_current_order.item_count%>">
            <%= link_to '', spree.cart_path, class: "zmdi zmdi-shopping-cart" %>
          </div>
        </div>
      </div>
    </nav>
  </div>
</div>