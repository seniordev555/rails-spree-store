<% if @product.taxons.present? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="product-section-title stext-110 cl2"><%= Spree.t(:look_for_similar_items) %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group" id="similar_items_by_taxon" data-hook>
        <% @product.taxons.each do |taxon| %>
          <li class="list-group-item mtext-101 cl2"><%= link_to taxon.name, seo_url(taxon), class: 'link-purple' %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

