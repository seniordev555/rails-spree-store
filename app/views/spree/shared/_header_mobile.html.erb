<div class="wrap-header-mobile">
  <!-- Logo moblie -->
      <figure id="logo" class="logo-mobile" data-hook>
        <%= logo %>
      </figure>

  <!-- Icon header -->
  <div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
    <div class="wrap-icon-header flex-w flex-r-m h-full">
      <ul id="nav-bar" class="flex-c-m h-full p-r-24" data-hook>
        <li id="search-bar" data-hook>
          <%= render partial: 'spree/shared/search' %>
        </li>
      </ul>

    <div class="flex-c-m h-full p-l-18 p-r-25 bor5">
      <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti" data-notify="<%=simple_current_order.item_count%>">
        <%= link_to '', spree.cart_path, class: "zmdi zmdi-shopping-cart" %>
      </div>
    </div>
  </div>

  <!-- Button show menu -->
  <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
    <span class="hamburger-box">
      <span class="hamburger-inner"></span>
    </span>
  </div>
</div>


<!-- Menu Mobile -->
<div class="menu-mobile">
  <ul class="main-menu-m">
    <li class="label1 active-menu" data-label1="hot">
      <%= link_to 'Shop', spree.root_path %>
    </li>

    <li>
      <a href="">About</a>
    </li>

    <li>
      <a href="">Contact</a>
    </li>
  </ul>
</div>
